<Window x:Class="GameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLauncher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Title="Launcher" Height="576" Width="1080">
    <Grid Background="Black">
        <Image Stretch="Uniform" Source="images/bg.png" HorizontalAlignment="Right"/>
        <TextBlock Name="Disclaimer" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20" Foreground="White" Margin="5,0,0,0" Width="200" TextWrapping="Wrap"/>
        <TextBlock Name="VersionText" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="20" Foreground="White" Margin="0,0,5,0"/>
        <Button Name="PlayButton" Content="Checking For Updates" Click="PlayButton_Click" Height="60" FontSize="28" FontWeight="Bold" Foreground="Black" Margin="15,0,0,15" VerticalAlignment="Bottom" HorizontalAlignment="Left" MinWidth="150"/>
    </Grid>
</Window>
